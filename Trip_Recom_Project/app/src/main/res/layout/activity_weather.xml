<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnightblue"
   >

    <!-- 날씨 아이콘은 drawable에 sun, drop, snow, cloud.png 이름으로 있습니다  -->

    <TextView
        android:id="@+id/weathertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/my_font_family"
        android:text="@string/weather"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/cityname2"
        app:layout_constraintStart_toStartOf="@+id/cityname2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cityname2"
        android:layout_width="309dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="676dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weathertext"
        app:srcCompat="@drawable/rounded_square_button_white" />

    <TextView
        android:id="@+id/weather_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/my_font_family"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconspace"
        android:layout_width="143dp"
        android:layout_height="131dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cityname2"
        app:srcCompat="@drawable/rounded_square_button_white"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="379dp"
        android:layout_height="434dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cityname2"
        app:srcCompat="@drawable/rounded_square_button_white"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="435dp" />

    <ImageView
        android:id="@+id/weathericon"
        android:layout_width="114dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconspace"
        app:layout_constraintEnd_toEndOf="@+id/iconspace"
        app:layout_constraintStart_toStartOf="@+id/iconspace"
        app:layout_constraintTop_toTopOf="@+id/iconspace"
        app:srcCompat="@drawable/sun" />

    <TextView
        android:id="@+id/statustext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/my_font_family"
        android:text=""
        android:textColor="@color/darkgrey"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="465dp"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"/>

</android.support.constraint.ConstraintLayout>